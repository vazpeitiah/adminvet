<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Registrate</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <label for="user">Nombre de usuario</label>
                             <input type="text" name="user" placeholder="Nombre de usuario" class="form-control"  required autofocus/> 
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" placeholder="Contraseña" class="form-control" required/>
                        </div>
                        <div class="form-group">
                            <label for="nombre">Nombre completo</label>
                            <input type="text" name="nombre" placeholder="Nombre completo" class="form-control" required  />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Registrarme</button>
                        </div>  
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>